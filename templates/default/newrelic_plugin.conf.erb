newrelic:
  license_key: '<%= @license_key %>'
  verbose: 1

agents:
  elasticsearch:
    -
      # Application name
      name: '<%= @project_name %>'

      url: '<%= @url %>'

      # Username and password for HTTP basic auth
      # username: ''
      # password: ''
      <%- if @username && @username != '' && @password && @password != '' %>
      username: '<%= @username %>'
      password: '<%= @password %>'
      <%- end %>


      # Index name
      # using '_all' with provide stats for all indices
      index: '_all'
